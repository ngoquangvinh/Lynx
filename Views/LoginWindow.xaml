<Window x:Class="Login1.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
       Title="Login" Height="680" Width="1200"
       WindowStartupLocation="CenterScreen"
       Background="White"
       AllowsTransparency="False"
       UseLayoutRounding="True"
       ResizeMode="CanResizeWithGrip"
       SnapsToDevicePixels="True"
       WindowStyle="SingleBorderWindow">

   <Window.Resources>
       <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,0">
           <GradientStop Color="#667eea" Offset="0.0"/>
           <GradientStop Color="#764ba2" Offset="1.0"/>
       </LinearGradientBrush>

       <Style x:Key="SocialButton" TargetType="Button">
           <Setter Property="Height" Value="35"/>
           <Setter Property="Margin" Value="5"/>
           <Setter Property="Background" Value="White"/>
           <Setter Property="BorderBrush" Value="LightGray"/>
           <Setter Property="BorderThickness" Value="1"/>
           <Setter Property="FontSize" Value="16"/>
           <Setter Property="Cursor" Value="Hand"/>
       </Style>

       <DropShadowEffect x:Key="DropShadow" ShadowDepth="0" BlurRadius="20" Opacity="0.3" />
   </Window.Resources>

   <Grid>
       <Grid.RowDefinitions>
           <RowDefinition Height="*"/>
           <!-- Main content -->
       </Grid.RowDefinitions>

       <!-- Custom title bar -->
       <!--<controls:TitleBar Grid.Row="0"/> -->

       <!-- Main content -->
       <Grid Grid.Row="0">
           <Grid.Background>
               <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                   <GradientStop Color="#667eea" Offset="0.0"/>
                   <GradientStop Color="#764ba2" Offset="1.0"/>
               </LinearGradientBrush>
           </Grid.Background>

           <Grid.ColumnDefinitions>
               <ColumnDefinition Width="*" />
               <ColumnDefinition Width="Auto" />
           </Grid.ColumnDefinitions>

           <!-- Left image panel -->
           <StackPanel HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,134,0,0"
                       Width="400">
               <Image x:Name="IntroImage" 
                      Source="Img/login.png"
                      Width="300"
                      Height="300"
                      Stretch="Uniform"
                      Margin="0,20"
                      RenderOptions.BitmapScalingMode="HighQuality"/>
           </StackPanel>

           <!-- Responsive Login Form -->
           <Border Background="White"
                   Padding="30"
                   MaxWidth="1000"
                   MinWidth="600"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   Grid.Column="1"
                   Effect="{StaticResource DropShadow}">
               <ScrollViewer VerticalScrollBarVisibility="Auto">
                   <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
                       <Border Background="{StaticResource PurpleGradient}"
                               Width="72" Height="72"
                               CornerRadius="12"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"
                               Padding="2">
                           <Image Source="/Views/Img/Lynx_V2.png"
                                  Stretch="Uniform"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"
                                  RenderOptions.BitmapScalingMode="HighQuality"/>
                       </Border>

                       <TextBlock Text="Welcome to Lynx"
                                  FontSize="28"
                                  FontWeight="Bold"
                                  Foreground="Black"
                                  TextAlignment="Center"/>
                       <TextBlock Text="Please login to continue"
                                  Foreground="Gray"
                                  FontSize="15"
                                  Margin="0,0,0,20"
                                  TextAlignment="Center"/>

                       <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,10,0,5"/>
                       <TextBox x:Name="EmailBox" Height="35" Padding="10"/>

                       <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,10,0,5"/>
                       <Grid>
                           <PasswordBox x:Name="PasswordBox" Height="35" Padding="10" Visibility="Visible"/>
                           <TextBox x:Name="VisiblePasswordBox" Height="35" Padding="10" Visibility="Collapsed"/>
                           <Button Width="30" Height="30"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Right"
                                  Margin="0,0,5,0"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  Focusable="False"
                                  Cursor="Hand"
                                  Click="TogglePasswordVisibility_Click">
                              <Image Source="/Views/Img/123.png" Width="20" Height="20"/>
                           </Button>
                       </Grid>

                       <Grid Margin="0,10,0,0">
                           <Grid.ColumnDefinitions>
                               <ColumnDefinition Width="*" />
                               <ColumnDefinition Width="Auto" />
                           </Grid.ColumnDefinitions>

                           <StackPanel Orientation="Horizontal">
                               <CheckBox x:Name="RememberMeCheck" />
                               <TextBlock Text="Remember me" VerticalAlignment="Center" Margin="5,0,0,0"/>
                           </StackPanel>

                           <TextBlock Grid.Column="1" Text="Forgot password?" Foreground="#667eea"
                                      Cursor="Hand" VerticalAlignment="Center"
                                      MouseDown="ForgotPassword_Click"/>
                       </Grid>

                       <Button x:Name="SignInButton"
                               Content="Sign In"
                               Margin="0,20,0,0"
                               Height="40"
                               Background="{StaticResource PurpleGradient}"
                               Foreground="White"
                               FontWeight="Bold"
                               BorderThickness="0"
                               Cursor="Hand" FontSize="15"/>

                       <TextBlock TextAlignment="Center" Margin="0,20,0,0" FontSize="12">
                           <Run Text="Don't have an account? " />
                           <Span Foreground="#667eea" FontWeight="Bold" Cursor="Hand"
                                 MouseDown="SignUp_MouseDown">Sign up</Span>
                       </TextBlock>
                   </StackPanel>
               </ScrollViewer>
           </Border>
       </Grid>
   </Grid>
</Window>