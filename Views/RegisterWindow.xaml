<Window x:Class="Login1.RegisterWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="720" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Border Margin="30" Padding="20" Background="White" CornerRadius="10" 
            BorderBrush="#E0E0E0" BorderThickness="1" >
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Sign Up"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Full Name" FontWeight="SemiBold"/>
            <TextBox x:Name="FullNameBox" Height="35" Margin="0,5"/>

            <TextBlock Text="Username" FontWeight="SemiBold"/>
            <TextBox x:Name="UsernameBox" Height="35" Margin="0,5"/>

            <TextBlock Text="Phone Number" FontWeight="SemiBold"/>
            <TextBox x:Name="PhoneBox" Height="35" Margin="0,5"/>

            <TextBlock Text="Birthday" FontWeight="SemiBold"/>
            <DatePicker x:Name="BirthdayPicker" Height="35" Margin="0,5"/>

            <TextBlock Text="Email" FontWeight="SemiBold"/>
            <TextBox x:Name="EmailBox" Height="35" Margin="0,5"/>

            <TextBlock Text="Password" FontWeight="SemiBold"/>
            <PasswordBox x:Name="PasswordBox" Height="35" Margin="0,5"/>

            <TextBlock Text="Confirm Password" FontWeight="SemiBold"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="35" Margin="0,5"/>

            <Button Content="Create Account"
                    Height="45"
                    Margin="0,15,0,10"
                    Background="#667eea"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Register_Click1"/>

            <TextBlock Text="Already have an account? Login"
                       FontSize="12"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Border>
</Window>
