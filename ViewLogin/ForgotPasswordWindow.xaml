<Window x:Class="LynxUI_Main.ViewLogin.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forgot Password" Height="500" Width="480"
        WindowStartupLocation="CenterScreen"
        
        ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Border Margin="30" Padding="20" Background="White" CornerRadius="10" 
            BorderBrush="#E0E0E0" BorderThickness="1" >
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Forgot Password?"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Enter your registered email" FontWeight="SemiBold"/>
            <TextBox x:Name="EmailBox" Height="35" Margin="0,10" VerticalContentAlignment="Center" FontSize="14"/>

            <Button Content="Reset Password"
                    Height="40"
                    Margin="0,10,0,0"
                    Background="#667eea"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="ResetPassword_Click"/>

            <TextBlock x:Name="StatusText"
                       FontSize="12"
                       Foreground="Green"
                       TextAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Border>
</Window>
