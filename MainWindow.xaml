<Window x:Class="Login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        
        Title="Login" Height="680" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">
    <Window.Resources>
        <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#667eea" Offset="0.0"/>
            <GradientStop Color="#764ba2" Offset="1.0"/>
        </LinearGradientBrush>

        <Style x:Key="SocialButton" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <DropShadowEffect x:Key="DropShadow" ShadowDepth="0" BlurRadius="20" Opacity="0.3" />
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0.0"/>
                <GradientStop Color="#764ba2" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        
        <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,134,0,0"
                Width="400">

            <Image x:Name="IntroImage" 
                   Source="img/login.png"
               Width="300"
               Height="300"
               Stretch="Uniform"
               Margin="0,20"/>
        </StackPanel>

        <Border Background="White"
                
                Padding="30"
                Width="650"
                Height="680"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                 Grid.Column="1"
                Effect="{StaticResource DropShadow}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">

                <Border Background="{StaticResource PurpleGradient}"
                     Width="64" Height="64"
                      CornerRadius="12"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"
                      Padding="5">
                    <Image Source="img/Lynx_V2.png"
                        Stretch="Uniform"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"/>
                </Border>


                <TextBlock Text="Welcome Lynx"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="Black"
                           TextAlignment="Center"/>
                <TextBlock Text="Login to continue to Lynx"
                           Foreground="Gray"
                           FontSize="12"
                           Margin="0,0,0,20"
                           TextAlignment="Center"/>

                <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <TextBox x:Name="EmailBox" Height="35" Padding="10" />

                <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <Grid>
                   
                    <PasswordBox x:Name="PasswordBox"
                 Height="35"
                 Padding="10"
                 Visibility="Visible"
                 Margin="0"/>

             
                    <TextBox x:Name="VisiblePasswordBox"
             Height="35"
             Padding="10"
             Visibility="Collapsed"
             Margin="0"/>

                  
                    <Button Width="30" Height="30"
            VerticalAlignment="Center"
            HorizontalAlignment="Right"
            Margin="0,0,5,0"
            Background="Transparent"
            BorderThickness="0"
            Focusable="False"
            Cursor="Hand"
            Click="TogglePasswordVisibility_Click">
                        <Image Source="img/123.png"
               Width="18" Height="18"/>
                    </Button>
                </Grid>

                <Button x:Name="SignInButton"
                        Content="Sign In"
                        Margin="0,20,0,0"
                        Height="40"
                        Background="{StaticResource PurpleGradient}"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand" />

                
                <StackPanel Margin="0,20,0,0">
                    
                </StackPanel>

                <TextBlock TextAlignment="Center" Margin="0,20,0,0" FontSize="12">
                <Run Text="Don't have an account? " />
                <Span Foreground="#667eea" FontWeight="Bold" Cursor="Hand"
                     MouseDown="SignUp_MouseDown">
                        Sign up
                </Span>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
